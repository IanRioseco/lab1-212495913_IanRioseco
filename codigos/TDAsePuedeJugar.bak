#lang racket
(provide (all-defined-out))
(require "TDAboard.rkt")
; Descripción: funcion que crea un tablero de conecta4 vacio.
; Dom: no recibe parametros.
; Rec: board
; Tipo recursión: No aplica.
 (define (board-can-play board) 
   (define (fila-tiene-espacio fila)
     (member '0 fila))
   
   (define (tablero-tiene-espacio board)
     (or (fila-tiene-espacio (car board)) (tablero-tiene-espacio (cdr board))))
   
   (if (null? board)#f (board-can-play board)))

